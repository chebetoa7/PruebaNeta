<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="pruebaExamen.View.UserDetailsPage"
             Title="Detalle de usuario">
    <VerticalStackLayout Padding="20" BackgroundColor="#FBFBFB"
                         HorizontalOptions="Center">
            <Label Text="{Binding name}" FontSize="24" FontAttributes="Bold" />
            <Label Text="{Binding email}" FontSize="18" />
        <Label Text="{Binding phone}" FontSize="18" />
        <Label Text="{Binding address.street}" FontSize="18" TextColor="LightCoral" />
        <Label Text="{Binding address.suite}" FontSize="18" TextColor="LightCoral" />
        <Label Text="{Binding address.city}" FontSize="18" TextColor="LightCoral" />
        <Label Text="{Binding address.zipcode}" FontSize="18" TextColor="LightCoral" />
        <Label Text="{Binding company.name}" FontSize="18" TextColor="LightGreen" />
        <Label Text="{Binding company.catchPhrase}" FontSize="18" TextColor="LightGreen" />
        <Label Text="{Binding geo.lat}" FontSize="18" TextColor="Red" />
        <Label Text="{Binding geo.lng}" FontSize="18" TextColor="Red" />
    </VerticalStackLayout>
</ContentPage>